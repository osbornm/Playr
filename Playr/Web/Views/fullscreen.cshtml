            </div>*@
            <div class="text">
                <hgroup>
                    <h1 data-bind="text: name"></h1>
                    <h2 data-bind="text: artistName"></h2>
                </hgroup>
                <section data-bind="widget: { name: 'timeline', options: { currentPosition: currentTime, total: totalTime } }"></section>
            </div>
        </div>
    </section>
<!-- /ko  -->

    <script src="scripts/jquery-1.9.1.js"></script>
